//CAMARO COLORS

//DEFAULT - YELLOW


models/players/camaro/body
{
	{
//		map textures/effects/tinfx2b.tga
		map textures/reflect/reflect.jpg
		tcGen environment
		rgbGen lightingdiffuse
	}
	{
		map models/players/camaro/body.tga
		alphaGen const 0.8
		blendFunc blend
		depthWrite
		rgbGen lightingdiffuse
	}
}

